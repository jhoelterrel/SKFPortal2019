@model SKFPortal.ViewModel.vmUser

@{
    ViewBag.Title = "VIVE SKF";
    Layout = "~/Views/Shared/_SoloBootstrap.cshtml";
}
<div class="container-fluid" style="background-image: linear-gradient(75deg, #3832c5, #412b7c);">
    <div class="row justify-content-center align-items-center text-center">
        <div class="col-md-6 col-12 d-md-flex d-none min-vh-100" style="background-image: url('../../Content/img/index.png'); background-size: cover; background-repeat: no-repeat; background-position: center">
            @*<img src="~/Content/img/index.png" class="img-fluid" alt="" />*@
        </div>
        <div class="col-md-6 col-12">
            <div class="card mx-auto" style="width: 18rem;">
                <div class="card-body">
                    @*<h5 class="card-title">Vive SKF</h5>*@
                    @*<legend>*@
                        <img src="https://viveskf.gointegro.com/scontent/1543/branding/f09af07ff30cc3a051d22b05c20531a9afa3d839" alt="" title="Vive SKF" width="178" height="44">
                    @*</legend>*@
                    <p class="card-subtitle">Inicia Sesion</p>

                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            @*<label class="form-label text-light" for="usuario">Usuario</label>
                <input type="text" id="usuario" name="usuario" class="form-control" required />*@
                            @Html.TextBoxFor(u => u.username, new { @class = "form-control", type = "text", placeholder = "Usuario" })
                        </div>
                        @Html.AntiForgeryToken()
                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            @*<label class="form-label text-light" for="clave">Password</label>
                <input type="password" id="clave" name="clave" class="form-control" required />*@
                            @Html.TextBoxFor(u => u.password, new { @class = "form-control", type = "password", placeholder = "Clave" })
                        </div>

                        <button type="submit" id="btn-ingresar" class="btn btn-primary">Iniciar Sesión</button>
                    }
                    @if (ViewBag.Message != null)
                    {
                        <p class="text-light">@ViewBag.Message</p>
                    }
                    <p class="m-2">Creado por &reg; STIC CORP SAC</p>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{

}